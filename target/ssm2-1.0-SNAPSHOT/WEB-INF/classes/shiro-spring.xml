<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!--    将realm交给spring来管理-->
    <bean id="userRealm" class="com.gxa.realm.UserRealm">
        <property name="credentialsMatcher">
            <bean class="org.apache.shiro.authc.credential.HashedCredentialsMatcher">
                <property name="hashAlgorithmName" value="MD5"></property>
                <property name="hashIterations" value="1024"></property>
            </bean>
        </property>
    </bean>
<!--    配置securityManager-->
    <bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">

<!--        将realm交给srcurityManager-->
        <property name="realm" ref="userRealm"></property>
    </bean>

    <bean class="org.apache.shiro.spring.security.interceptor.AuthorizationAttributeSourceAdvisor">
        <property name="securityManager" ref="securityManager"/>
    </bean>

    <bean id="shiroFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
        <property name="securityManager" ref="securityManager"/>
        <!--告诉shiro登录页面-->
        <property name="loginUrl" value="/index.html"/>
        <!--登录成功页面-->
        <property name="successUrl" value="/emp/list"/>
        <property name="unauthorizedUrl" value="/unauthorized"></property>


        <!--配置哪些资源需要登录
            1、anon  可以匿名访问 不用登录
            2、authc 必须登录后才能访问的资源
        -->
        <property name="filterChainDefinitions">
            <value>
                / = anon
                /asserts/** =anon
                /index.html = anon
                /user/login = anon
                /logout = logout
                /docs=anon
                /swagger-ui.html=anon
                /webjars/springfox-swagger-ui/**=anon
                /swagger-resources/**=anon
                /v2/api-docs=anon

                /** = anon



            </value>
        </property>
    </bean>

</beans>